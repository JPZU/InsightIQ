[MASTER]
ignore-patterns=\d+.*
ignore=venv,__pycache__,alembic/versions

[MESSAGES CONTROL]
disable=C0114,C0115,C0116,R0903,C0301
enable=C0102,C0103

[FORMAT]
variable-rgx=^[a-z_][a-z0-9_]*$

const-rgx=^[A-Z][A-Z0-9_]*$

class-rgx=^[A-Z][a-zA-Z0-9]+$

function-rgx=^[a-z_][a-z0-9_]*$
method-rgx=^[a-z_][a-z0-9_]*$

[DESIGN]
max-args=10
